                @Html.EditorFor(model => model.IsProcessed)
                @Html.ValidationMessageFor(model => model.IsProcessed)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Person, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Person)
                @Html.ValidationMessageFor(model => model.Person)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tense, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Tense)
                @Html.ValidationMessageFor(model => model.Tense)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
