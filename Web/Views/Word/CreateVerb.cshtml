@model LetsLearnCzech.Web.Models.VerbModel

@{
    ViewBag.Title = "Create verb";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create verb</h2>

@using (Html.BeginForm("CreateVerb", "Word")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

         <div class="form-group">
            @Html.LabelFor(model => model.ForeignWord, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ForeignWord)
                @Html.ValidationMessageFor(model => model.ForeignWord)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LocalWord, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LocalWord)
                @Html.ValidationMessageFor(model => model.LocalWord)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aspect, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Aspect)
                @Html.ValidationMessageFor(model => model.Aspect)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Conjugation, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                 @Html.EnumDropDownListFor(model => model.Conjugation)
                @Html.ValidationMessageFor(model => model.Conjugation)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsProcessed, new { @class = "control-label col-md-2" })
